<%= stylesheet_link_tag params[:controller] %>

<p id="notice"><%= notice %></p>

<div class="prod_img_main">
  <%= image_tag @product.image %>
</div>

<div class="page_head">
  <h1 class="title">
    <%= @product.name %>
  </h1>
  <p class="tiny">
    <strong>Made by:</strong>
    <%= @product.mfg %>
  </p>
</div>


  <p class="tiny">
    <strong>Category:</strong>
    <%= link_to(@product.category.name, category_path(@product.category.id)) %>
  </p>

  <p class="description">
    <%= @product.description %>
  </p>

  <p class="tiny">
    <strong>Link to product:</strong>
    <a href="http://<%= @product.url %>" target="_blank"><%= @product.url %></a>
  </p>

  <p class="tiny">
    <strong>Submitted by:</strong>
    <%= @product.user.email %>
  </p>
  <br>

<div class="edit_back_link">
 <% if user_signed_in? %>
   <% if current_user.id == @user %>
     <%= link_to 'Edit', edit_product_path(@product) %> |
   <% else %>
   <%end%>
 <%end%>

  <%= link_to('All ' + @product.category.name.pluralize, category_path(@product.category.id)) %> |
  <%= link_to('All Products', products_path) %><br>
  <%= link_to('Home', home_index_path) %>
  </div>


  <br>
  <div class="review-link">
    <%= link_to 'Leave a Review!', new_product_review_path(@product) %><br>
  </div>

<div class="transbox">
<h2 class="review-title">Reviews:</h2>
<% @reviews.each do |f| %>
  <h4 class="indv-title"><%= f.title %></h4>
  <p class="subhead"><%= f.user.email %> <%= f.created_at %></p><br>
  <p class="review-text"><%= f.comment %></p><br>
  <p class="rating-text">Rating: <%= f.rating %> out of 5!</p>
<% end %>

</div>
